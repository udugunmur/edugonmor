
# ============================================================================
# Nexus Registry Credentials
# ============================================================================
NEXUS_USER=nexus_user
NEXUS_PASSWORD=nexus_password
NEXUS_REGISTRY=nexus.edugonmor.com/repository/docker-hosted

# Rclone Services Configuration
# ============================================================================
# Common
RCLONE_TZ=UTC
RCLONE_CMD_SYNC=sync

# Local Backup
RCLONE_LOCAL_BACKUP_CRON=0 3 * * *
RCLONE_LOCAL_BACKUP_DEST=onedrive-backup:backups/docker-volumes
RCLONE_LOCAL_BACKUP_SOURCE=/data/volumes

# OneDrive Edugonmor
RCLONE_ONEDRIVE_EDUGONMOR_CRON=0 * * * *
RCLONE_ONEDRIVE_EDUGONMOR_SOURCE=onedrive-edugonmor:
RCLONE_ONEDRIVE_EDUGONMOR_DEST=/data

# OneDrive Edugonmor Data
RCLONE_ONEDRIVE_EDUGONMOR_DATA_CRON=0 * * * *
RCLONE_ONEDRIVE_EDUGONMOR_DATA_SOURCE=onedrive-data:
RCLONE_ONEDRIVE_EDUGONMOR_DATA_DEST=/data

# OneDrive Edugonmor Media
RCLONE_ONEDRIVE_EDUGONMOR_MEDIA_CRON=0 * * * *
RCLONE_ONEDRIVE_EDUGONMOR_MEDIA_SOURCE=onedrive-media:
RCLONE_ONEDRIVE_EDUGONMOR_MEDIA_DEST=/data

# OneDrive Edugonmor Business
RCLONE_ONEDRIVE_EDUGONMOR_BUSINESS_CRON=0 * * * *
RCLONE_ONEDRIVE_EDUGONMOR_BUSINESS_SOURCE=onedrive-business:
RCLONE_ONEDRIVE_EDUGONMOR_BUSINESS_DEST=/data

# GDrive Udugunmur
RCLONE_GDRIVE_UDUGUNMUR_CRON=0 * * * *
RCLONE_GDRIVE_UDUGUNMUR_SOURCE=gdrive-udugunmur:
RCLONE_GDRIVE_UDUGUNMUR_DEST=/data
