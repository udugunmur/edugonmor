{
  "description": "Initial data configuration for MongoDB {{cookiecutter._mongo_version}}",
  "users": [
    {
      "username": "app_user",
      "password": "app_password_dev",
      "roles": [
        { "role": "readWrite", "db": "{{cookiecutter._mongo_database}}" }
      ],
      "description": "Application user with read/write access to app database"
    },
    {
      "username": "readonly_user",
      "password": "readonly_password_dev",
      "roles": [
        { "role": "read", "db": "{{cookiecutter._mongo_database}}" }
      ],
      "description": "Read-only user for reporting"
    }
  ],
  "collections": [
    {
      "name": "config",
      "database": "{{cookiecutter._mongo_database}}",
      "documents": [
        {
          "key": "app_version",
          "value": "1.0.0",
          "description": "Application version"
        },
        {
          "key": "initialized_at",
          "value": "{{cookiecutter._project_name}}",
          "description": "Project name"
        }
      ]
    }
  ],
  "indexes": [
    {
      "collection": "config",
      "database": "{{cookiecutter._mongo_database}}",
      "keys": { "key": 1 },
      "options": { "unique": true }
    }
  ]
}
