# ============================================================================
# PostgreSQL {{cookiecutter._postgres_version}} - Environment Configuration
# ============================================================================
# Maintainer: edugonmor
# Version: {{cookiecutter._postgres_version}}
# Last Updated: 2025-12-04
# Documentación: https://www.postgresql.org/docs/{{cookiecutter._postgres_version}}/

# ============================================================================
# PostgreSQL Configuration
# ============================================================================

# PostgreSQL Admin Credentials
POSTGRES_USER={{cookiecutter._postgres_user}}
POSTGRES_PASSWORD={{cookiecutter._db_root_password}}

# Base de datos por defecto
POSTGRES_DB={{cookiecutter._postgres_db}}
POSTGRES_PORT={{cookiecutter._postgres_port}}
BACKUP_RETENTION={{cookiecutter._backup_retention}}
CRON_SCHEDULE={{cookiecutter._cron_schedule}}

# ============================================================================
# PostgreSQL Advanced Configuration (Opcional)
# ============================================================================

# Argumentos para initdb durante la inicialización
# Documentación: https://www.postgresql.org/docs/{{cookiecutter._postgres_version}}/app-initdb.html
POSTGRES_INITDB_ARGS=--encoding=UTF8 --locale=en_US.UTF-8

# Método de autenticación para conexiones host
# Opciones: trust, reject, md5, password, scram-sha-256 (recomendado)
# Documentación: https://www.postgresql.org/docs/{{cookiecutter._postgres_version}}/auth-methods.html
POSTGRES_HOST_AUTH_METHOD=scram-sha-256

# ============================================================================
# Timezone Configuration
# ============================================================================
TZ=Europe/Madrid

# ============================================================================
# Nexus Registry Credentials
# ============================================================================
NEXUS_USER=nexus_user
NEXUS_PASSWORD=nexus_password
NEXUS_REGISTRY=nexus.edugonmor.com/repository/docker-hosted
